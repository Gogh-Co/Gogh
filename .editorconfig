# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 2

end_of_line = lf
charset = utf-8

max_line_length = 80

trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_style = space
indent_size = 4

[*.{css,scss,less}]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.txt]
indent_style = space
indent_size = 4

[*.{diff,md}]
trim_trailing_whitespace = false
